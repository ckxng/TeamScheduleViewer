@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Team Schedule</h1>
</div>

<div>
    @for (int i = 0; i < Model.Plans.Length; i++)
    {
        <h3>@{var date = Model.Plans[i].Date.ToShortDateString();}@date</h3>
        <ul>
            @for (int j = 0; j < Model.Plans[i].TeamMembers.Count; j++)
            {
                <li>@Model.Plans[i].TeamMembers[j].Name (@Model.Plans[i].TeamMembers[j].Position)</li>
            }
        </ul>
    }
</div>